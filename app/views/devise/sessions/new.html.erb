
<div class="heroform">

<div class="form-container">

<div class="log-in-font">
<h2>Log in</h2>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <ul><%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %></ul>
    <ul><%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %></ul>
    <ul><%= f.input :remember_me, as: :radio_buttons if devise_mapping.rememberable? %></ul>

  <div class="form-actions">
    <ul><%= f.button :submit, "Log in" %></ul>
  </div>
<% end %>
  </div>

<%= render "devise/shared/links" %>

</div>
</div>
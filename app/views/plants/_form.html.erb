
<%= simple_form_for @plant do |f| %>
  <%= f.input :name %>
  <%= f.input :variant, as: :radio_buttons, collection: [['Tree', 'Tree'], ['Flowering', 'Flowering'],['Bush', 'Bush'],['Fruit/Veg/Herb', 'Fruit/Veg/Herb']], label_method: :second, value_method: :first %>
  <%= f.input :pot_size %>
  <%= f.input :price %>
  <%= f.button :submit, 'Sell Plant' %>
<% end %>


